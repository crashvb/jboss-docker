#!/bin/bash

set -e

# Configure: jboss
if [[ ! -e $EP_RUN ]] ; then
	log "Configuring $(basename $0) for first run ..."

	# Generate passwords
	generate_password jboss

	log "Creating admin user ..."
	su --command="$JBOSS_HOME/bin/add-user.sh --silent=true admin $JBOSS_PASSWORD" --preserve-environment jboss
fi

